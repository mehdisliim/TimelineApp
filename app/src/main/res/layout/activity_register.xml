<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/form_background">

        <ImageView
            android:layout_width="107dp"
            android:layout_height="95dp"
            android:maxWidth="40px"
            android:maxHeight="2dp"
            android:layout_gravity="center"
            android:src="@drawable/hourglass_logo">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TimeLineApp - Register"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            ></TextView>

        <Space
            android:layout_width="0dp"
            android:layout_height="20dp"></Space>

        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- Username Field -->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- Email Field -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How did you find the game?"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:padding="12dp"/>

        <RadioGroup
            android:id="@+id/rg_find_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rb_play_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On the Internet"
                android:padding="8dp"
                android:background="@drawable/edit_text_background"/>

            <RadioButton
                android:id="@+id/rb_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend's Suggestion"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>
            <RadioButton
                android:id="@+id/rb_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>
        </RadioGroup>
        <!-- Register Button -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:background="@color/soft_blue"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>